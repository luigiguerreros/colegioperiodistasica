<h2>Registrar Corresponsal</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= f.error_notification %>
  <div class="row">
  <div class="col-md-6">
    <%= f.input :email, label: "Correo", :required => true, :autofocus => true, input_html: { :class => "form-control form-group"} %>
    <%= f.input :password, label: "Clave", :required => true, input_html: { :class => "form-control form-group"} %>
    <%= f.input :password_confirmation, label: "Confirmar Clave", :required => true, input_html: { :class => "form-control form-group"} %>
    <%= f.input :nombres , input_html: { :class => "form-control form-group"}%>
    <%= f.input :apellidos, input_html: { :class => "form-control form-group"} %>
  </div>
  <div class="col-md-6">
    <%= f.input :telefono_fijo, input_html: { :class => "form-control form-group"} %>
    <%= f.input :telefono_movil, input_html: { :class => "form-control form-group"} %>
    <%= f.input :ciudad, input_html: { :class => "form-control form-group"} %>
    <%= f.input :provincia, input_html: { :class => "form-control form-group"} %>
  </div>
  <div>
   <%= f.button :submit, "Crear Corresponsal", :class => "btn btn-primary btn-lg btn-block" %>
 </div>
</div>
<% end %>
<%= render "devise/shared/links" %>