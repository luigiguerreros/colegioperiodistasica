<div class="form-horizontal row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), input_html: { :class => "form-horizontal" }) do |f| %>
     <div class="form-group">
        <div class="col-sm-10">
          <%= f.input :email, :required => false, :autofocus => true, input_html: { :class => "form-control", :placeholder => "Correo" , :id => "inputEmail3"} %>
        </div>
      </div>
     <div class="form-group">
        <div class="col-sm-10">
          <%= f.input :password, :required => false, input_html: { :class => "form-control", :id => "inputPassword3", :placeholder => "Clave" } %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <div class="checkbox">
              <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.button :submit, "Entrar", :class => "btn btn-lg btn-success btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
